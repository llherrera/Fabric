{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
        "baseUrl": "./",
        "lib": ["ES2021"],
        "typeRoots": ["src/types/variables.d.ts"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "spec/**/*"
    ],
    "ts-node": {
        "esm": true
    }
}
